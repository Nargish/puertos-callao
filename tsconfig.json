{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "jsx": "react-native",
    "strict": true,
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [
      "react",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "app",
    "src",
    "src/types"
  ],
  "extends": "expo/tsconfig.base"
}
